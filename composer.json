{
    "name": "alexeybob/laravel-translator",
    "description": "Laravel artisan command that extracting translation contents and updating translation files automatically",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Bob",
            "email": "alexey.bob@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": ">=5.4.x-dev",
        "symfony/finder": "~3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Translator\\": "src/"
        },
        "files": [
            "src/Helpers/CommonHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Translator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Translator\\TranslatorServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=translator --force"
        ],
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=translator --force"
        ]
    }
}
